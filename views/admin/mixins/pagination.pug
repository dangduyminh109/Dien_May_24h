mixin pagination(pagination)
    - var pages = [...Array(pagination.totalPage).keys()] 
    div(class="pagination-btn" id="pagination-btn" number-of-page=pagination.totalPage current-page=pagination.page)
        nav(aria-label="Page navigation")
            ul(class="pagination")
                li(class="page-item")
                    button(class="page-link", id="btn-prev", aria-label="Previous")
                        span(aria-hidden="true") 
                            i(class="fa-solid fa-angles-left")
                if pagination.totalPage < 4
                    each item in pages
                        li(class=`page-item ${pagination.page === item+1 ? "active" : ""}`)
                            a(class="page-link", href=`?page=${item+1}`) #{item+1}
                else 
                    if pagination.page + 2 >= pagination.totalPage
                        li(class="page-item")
                            a(class="page-link", href=`?page=1`) 1
                        li(class="page-item")
                             a(class="page-link", href=`?page=${pagination.page}`) ...
                        each item in [2,1,0]
                            li(class=`page-item ${pagination.page === pagination.totalPage - item ? "active" : ""}`)
                                a(class="page-link", href=`?page=${pagination.totalPage - item}`) #{pagination.totalPage - item}
                    else if pagination.page == 2
                        each item in [0,1,2]
                            li(class=`page-item ${pagination.page === item+1 ? "active" : ""}`)
                                a(class="page-link", href=`?page=${item+1}`) #{item+1}
                        li(class="page-item")
                            a(class="page-link", href=`?page=${pagination.page}`) ...
                        li(class=`page-item ${pagination.page === 4 ? "active" : ""}`)
                            a(class="page-link", href=`?page=4`) 4
                    else
                        each item in [0,1,2]
                            li(class=`page-item ${pagination.page === item+pagination.page ? "active" : ""}`)
                                a(class="page-link", href=`?page=${item+pagination.page}`) #{item+pagination.page}
                        li(class="page-item")
                            a(class="page-link", href=`?page=${pagination.page}`) ...
                        li(class=`page-item ${pagination.page === pagination.totalPage ? "active" : ""}`)
                            a(class="page-link", href=`?page=${pagination.totalPage}`) #{pagination.totalPage}
                li(class="page-item")
                    button(class="page-link",id="btn-next" aria-label="Next" )
                        span(aria-hidden="true") 
                            i(class="fa-solid fa-angles-right")
