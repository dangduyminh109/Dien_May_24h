header(class="header-admin")
    div(class="wrapper")
        div(class="left-box")
            div(class="logo")
                a(class="logo__link" href="/") 
                    img(class="logo__img",src="../../../admin/images/logo.webp", alt="logo") 
                
            div(class="toggle")
                    div(class="form-check form-switch")
                        input(class="form-check-input", type="checkbox", role="switch", checked)
                        
            div(class="search")
                div(id="search-box" class="search-box")
                    span(id="search-box__close-icon" class="search-box__close-icon")
                        <i class="fa-solid fa-xmark"></i>
                    input(class="search-box__input" type="text" placeholder="Enter keyword...")
                <i id="search__icon" class="search__icon fa-solid fa-magnifying-glass"></i>
            div(class="screen")
                <i id="screen__icon--expand" class="screen__icon fa-solid fa-expand"></i>
                <i id="screen__icon--compress" class="screen__icon active fa-solid fa-compress"></i>
        div(class="right-box")
            div(class="notification")
                span(class="notification__quantity") 0
                <i class="fa-regular fa-bell"></i>
            div(class="message")
                span(class="message__quantity") 0
                <i class="fa-regular fa-message"></i>
            div(class="admin")
                img(class="admin__img",src="../../../admin/images/coc.jpg", alt="")
                h3(class="admin__name") duy minh
                span(class="admin__icon") 
                    <i class="fa-solid fa-caret-down">

